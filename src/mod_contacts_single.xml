<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
  <name>MOD_CONTACTS_SINGLE</name>
  <creationDate>02/2019</creationDate>
  <author>Sebastian Brümmer</author>
  <authorEmail>sebastian@produktivbuero.de</authorEmail>
  <authorUrl>https://www.produktivbuero.de</authorUrl>
  <copyright>Copyright (C) 2019 *produktivbüro . All rights reserved</copyright>
  <license>GNU General Public License version 2 or later</license>
  <version>0.9.1</version>
  <description>MOD_CONTACTS_SINGLE_XML_DESCRIPTION</description>

  <!-- Module files -->
	<files>
		<filename module="mod_contacts_single">mod_contacts_single.php</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>

  <!-- Language files -->
  <languages folder="language">
    <language tag="de-DE">de-DE/de-DE.mod_contacts_single.ini</language>
    <language tag="de-DE">de-DE/de-DE.mod_contacts_single.sys.ini</language>
    <language tag="en-GB">en-GB/en-GB.mod_contacts_single.ini</language>
    <language tag="en-GB">en-GB/en-GB.mod_contacts_single.sys.ini</language>
  </languages>

  <!-- Update servers -->
  <updateservers>
    <server type="extension" priority="1" name="MOD_CONTACTS_SINGLE">https://raw.githubusercontent.com/produktivbuero/joomla-mod_contacts_single/master/updates.xml</server>
  </updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="ids"
					type="sql"
          query="SELECT id, name FROM #__contact_details ORDER BY name ASC"
          key_field="id"
          value_field="name"
					multiple="true"
          required="true"
					label="MOD_CONTACTS_SINGLE_FIELD_CONTACT_LABEL"
					description="MOD_CONTACTS_SINGLE_FIELD_CONTACT_DESC"
				/>

				<field
						name="ordering"
						type="list"
						default="ordering"
						label="MOD_CONTACTS_SINGLE_FIELD_ORDERING_LABEL">
					<option value="ordering">MOD_CONTACTS_SINGLE_FIELD_ORDERING_ORDERING</option>
					<option value="name">MOD_CONTACTS_SINGLE_FIELD_ORDERING_NAME</option>
					<option value="created">MOD_CONTACTS_SINGLE_FIELD_ORDERING_CREATED</option>
					<option value="publish_up">MOD_CONTACTS_SINGLE_FIELD_ORDERING_PUBLISH</option>
					<option	value="rand()">MOD_CONTACTS_SINGLE_FIELD_ORDERING_RANDOM</option>
				</field>

				<field
						name="direction"
						type="radio"
						default="ASC"
						label="MOD_CONTACTS_SINGLE_FIELD_DIRECTION_LABEL"
            class="btn-group"
            showon="ordering!:rand()">
					<option value="ASC">MOD_CONTACTS_SINGLE_FIELD_DIRECTION_ASC</option>
					<option value="DESC">MOD_CONTACTS_SINGLE_FIELD_DIRECTION_DESC</option>
				</field>
			</fieldset>

			<fieldset name="DISPLAY">
        <field
            name="show_name"
            type="radio"
            default="1"
            label="MOD_CONTACTS_SINGLE_FIELD_NAME_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="item_link"
            type="radio"
            default="1"
            showon="show_name:1"
            label="MOD_CONTACTS_SINGLE_FIELD_LINK_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

				<field
						name="show_image"
						type="radio"
						default="0"
						label="MOD_CONTACTS_SINGLE_FIELD_IMAGE_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="show_position"
            type="radio"
            default="0"
            label="MOD_CONTACTS_SINGLE_FIELD_POSITION_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="show_email_to"
            type="radio"
            default="1"
            label="MOD_CONTACTS_SINGLE_FIELD_EMAIL_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="link_email_to"
            type="radio"
            default="1"
            showon="show_email_to:1"
            label="MOD_CONTACTS_SINGLE_FIELD_EMAIL_LINK_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field
            name="text_email_to"
            type="text"
            showon="show_email_to:1"
            label="MOD_CONTACTS_SINGLE_FIELD_EMAIL_TEXT_LABEL"
            description="MOD_CONTACTS_SINGLE_FIELD_EMAIL_TEXT_DESC" />

				<field
						name="show_street_address"
						type="radio"
						default="1"
						label="MOD_CONTACTS_SINGLE_FIELD_STREET_ADDRESS_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

				<field
						name="show_suburb"
						type="radio"
						default="1"
						label="MOD_CONTACTS_SINGLE_FIELD_SUBURB_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

				<field
						name="show_state"
						type="radio"
						default="1"
						label="MOD_CONTACTS_SINGLE_FIELD_STATE_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

				<field
						name="show_postcode"
						type="radio"
						default="1"
						label="MOD_CONTACTS_SINGLE_FIELD_POSTCODE_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="show_country"
            type="radio"
            default="0"
            label="MOD_CONTACTS_SINGLE_FIELD_COUNTRY_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="show_telephone"
            type="radio"
            default="0"
            label="MOD_CONTACTS_SINGLE_FIELD_TELEPHONE_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="show_mobile"
            type="radio"
            default="0"
            label="MOD_CONTACTS_SINGLE_FIELD_MOBILE_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="show_fax"
            type="radio"
            default="0"
            label="MOD_CONTACTS_SINGLE_FIELD_FAX_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="show_webpage"
            type="radio"
            default="0"
            label="MOD_CONTACTS_SINGLE_FIELD_WEBPAGE_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
        </field>

        <field
            name="link_webpage"
            type="radio"
            default="1"
            showon="show_webpage:1"
            label="MOD_CONTACTS_SINGLE_FIELD_WEBPAGE_LINK_LABEL"
            class="btn-group btn-group-yesno">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field type="spacer" name="spacer" hr="true" />

        <field
            name="symbols"
            type="list"
            default="0"
            label="MOD_CONTACTS_SINGLE_FIELD_VIEW_LABEL"
            description="MOD_CONTACTS_SINGLE_FIELD_VIEW_DESC">
          <option value="0">MOD_CONTACTS_SINGLE_FIELD_VIEW_SYMBOLS</option>
          <option value="1">MOD_CONTACTS_SINGLE_FIELD_VIEW_TEXT</option>
          <option value="2">MOD_CONTACTS_SINGLE_FIELD_VIEW_NONE</option>
        </field>
			</fieldset>

			<fieldset name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
